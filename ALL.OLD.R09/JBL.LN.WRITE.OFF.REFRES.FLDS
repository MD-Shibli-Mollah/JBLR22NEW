    SUBROUTINE JBL.LN.WRITE.OFF.REFRES.FLDS
    $INSERT GLOBUS.BP I_EQUATE
    $INSERT GLOBUS.BP I_COMMON
    $INSERT JBL.BP I_F.EB.LN.WRITE.OFF

    FN.WRT.OFF = 'F.EB.LN.WRITE.OFF'; F.WRT.OFF = ''

    CALL OPF(FN.WRT.OFF,F.WRT.OFF)
    CALL F.READ(FN.WRT.OFF,ID.NEW,R.WO,F.WRT.OFF,ERR)
    IF R.WO THEN
        R.WO<EB.LN.44.DEPOSIT.AMT> = ''
        R.WO<EB.LN.44.INT.CAP.AMT> = ''
        CALL F.WRITE(FN.WRT.OFF,ID.NEW,R.WO)
        CALL JOURNAL.UPDATE("")
    END
END
