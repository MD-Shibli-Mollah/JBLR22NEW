* SELECTION VALIDATION ROUTINE
* LIVE: 20161103
* DEV: ALIN BOBY
***********************

    SUBROUTINE SS.DATE.VALIDATE
    $INSERT GLOBUS.BP I_COMMON
    $INSERT GLOBUS.BP I_EQUATE
    $INSERT GLOBUS.BP I_ENQUIRY.COMMON
    Y.SDATE=O.DATA
    Y.SDATE.LEN=LEN(Y.SDATE)
    Y.MONTH=LEFT(RIGHT(Y.SDATE,4),2)
    Y.DAY=RIGHT(Y.SDATE,2)
    IF Y.SDATE.LEN NE 8 THEN
        ETEXT='DATE LENGTH SHOULD BE 8 "YYYYMMDD"'
        CALL STORE.END.ERROR
    END
    ELSE IF Y.MONTH GT 12 THEN
        ETEXT='MONTH SHOULD BE WITHIN 12'
        CALL STORE.END.ERROR
    END
    ELSE IF Y.DAY GT 31 THEN
        ETEXT='DAY SHOULD BE WITHIN 31'
        CALL STORE.END.ERROR
    END
    ELSE IF ISDIGIT(Y.SDATE) EQ 0 THEN
        ETEXT='DATE FORMAT MUST BE INTEGER'
        CALL STORE.END.ERROR
    END
    RETURN
