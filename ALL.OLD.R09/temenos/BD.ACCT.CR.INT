*-----------------------------------------------------------------------------
* <Rating>-31</Rating>
*-----------------------------------------------------------------------------
    SUBROUTINE BD.ACCT.CR.INT(Y.RETURN)
!PROGRAM BD.ACCT.CR.INT

    $INSERT GLOBUS.BP I_COMMON
    $INSERT GLOBUS.BP I_EQUATE
    $INSERT GLOBUS.BP I_F.ACCOUNT
    $INSERT GLOBUS.BP I_F.STMT.ACCT.CR
    $INSERT GLOBUS.BP I_F.COMPANY
    $INSERT GLOBUS.BP I_ENQUIRY.COMMON

    GOSUB INIT
    GOSUB OPENFILES
    GOSUB PROCESS
    RETURN

INIT:

    FN.AC = "F.ACCOUNT"
    F.AC = ""
    FN.STMT.ACCT.CR = "F.STMT.ACCT.CR"
    F.STMT.ACCT.CR = ""

    Y.AC.TITLE = ""
    Y.TAX.CUS = ""
    Y.TOT.INT = ""
    Y.MANUAL.ADJST = ""
    Y.TOT.ADJST = ""


    LOCATE "CRDT.INT.DATE" IN ENQ.SELECTION<2,1> SETTING CREDIT.INT.DATE.POS THEN
        Y.CREDIT.INT.DATE = ENQ.SELECTION<4,CREDIT.INT.DATE.POS>
    END
    LOCATE "CATEGORY" IN ENQ.SELECTION<2,1> SETTING CATEGORY.POS THEN
        Y.CATEGORY = ENQ.SELECTION<4,CATEGORY.POS>
    END

    RETURN

OPENFILES:

    CALL OPF(FN.AC,F.AC)
    CALL OPF(FN.STMT.ACCT.CR,F.STMT.ACCT.CR)

    RETURN

PROCESS:

    SEL.CMD = "SELECT ":FN.AC:" WITH CO.CODE EQ ":ID.COMPANY:" AND CATEGORY EQ ":Y.CATEGORY
    CALL EB.READLIST(SEL.CMD,SEL.LIST,"",NO.OF.RECORD,RET.CODE)
    LOOP
        REMOVE Y.REC.ID FROM SEL.LIST SETTING Y.POS
    WHILE Y.REC.ID:Y.POS

        Y.STMT.ACCT.ID = Y.REC.ID : "-" : Y.CREDIT.INT.DATE
        CALL F.READ(FN.STMT.ACCT.CR,Y.STMT.ACCT.ID,R.STMT.AC.CR.REC,F.STMT.ACCT.CR,Y.ERR)
        IF R.STMT.AC.CR.REC EQ "" THEN
            Y.STMT.ACCT.ID = Y.REC.ID : "-20211230"
            CALL F.READ(FN.STMT.ACCT.CR,Y.STMT.ACCT.ID,R.STMT.AC.CR.REC,F.STMT.ACCT.CR,Y.ERR)
        END

        CALL F.READ(FN.AC,Y.REC.ID,R.AC.REC,F.AC,Y.ERR)

        IF R.STMT.AC.CR.REC NE "" THEN
            Y.AC.TITLE = R.AC.REC<AC.ACCOUNT.TITLE.1>
            Y.TAX.CUS = R.STMT.AC.CR.REC<IC.STMCR.TAX.FOR.CUSTOMER>
            Y.TOT.INT = R.STMT.AC.CR.REC<IC.STMCR.TOTAL.INTEREST>
            Y.MANUAL.ADJST = R.STMT.AC.CR.REC<IC.STMCR.MANUAL.ADJ.AMT>
            Y.TOT.ADJST = Y.TOT.INT + Y.MANUAL.ADJST
            Y.RETURN<-1> = Y.REC.ID:"*":Y.AC.TITLE:"*":Y.TAX.CUS:"*":Y.TOT.INT:"*":Y.MANUAL.ADJST:"*":Y.TOT.ADJST
        END
    REPEAT

    RETURN
END
