    SUBROUTINE BD.S.CHRG.TO.PROV.ACCT
    $INSERT GLOBUS.BP I_COMMON
    $INSERT GLOBUS.BP I_EQUATE
    $INSERT GLOBUS.BP I_F.LETTER.OF.CREDIT

    Y.MRG=R.NEW(TF.LC.PROVISION)
    Y.APP.ACCOUNT = R.NEW(TF.LC.APPLICANT.ACC)
    IF Y.APP.ACCOUNT NE '' THEN
        IF Y.MRG EQ 'Y' THEN
            R.NEW(TF.LC.CHARGES.ACCOUNT) = Y.APP.ACCOUNT
        END
        R.NEW(TF.LC.PROVIS.ACC) = Y.APP.ACCOUNT
    END

    IF Y.MRG EQ 'NO' THEN
        R.NEW(TF.LC.PROVIS.ACC) =""
    END
    RETURN
END 
