    SUBROUTINE GET.ENTRY(ENTRY.TYPE,MODE,ENTRY.ID,ENTRY.REC)
    $INSERT GLOBUS.BP I_COMMON
    $INSERT GLOBUS.BP I_EQUATE

    FN.STMT.TODAY="FBNK.STMT.TODAY.ID"
    F.STMT.TODAY=""
    R.STMT.TODAY=''
    IF ENTRY.TYPE EQ 'STMT' OR ENTRY.TYPE EQ 'CATG' OR ENTRY.TYPE EQ 'CONSOL'  THEN
        CALL OPF(FN.STMT.TODAY,F.STMT.TODAY)
        WRITE R.STMT.TODAY TO F.STMT.TODAY,ENTRY.TYPE:"*":ENTRY.ID:"*":TODAY
    END
    RETURN
END
