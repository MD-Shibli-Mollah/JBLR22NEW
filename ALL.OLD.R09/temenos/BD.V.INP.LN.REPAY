    SUBROUTINE  BD.V.INP.LN.REPAY

    $INSERT GLOBUS.BP I_COMMON
    $INSERT GLOBUS.BP I_EQUATE
    $INSERT GLOBUS.BP I_F.ACCOUNT

    CALL GET.LOC.REF('ACCOUNT','REPAY.ACCOUNT',Y.REPAY.ACCOUNT.POS)
    Y.REPAY.AC = R.NEW(AC.LOCAL.REF)<1,Y.REPAY.ACCOUNT.POS>
    IF Y.REPAY.AC MATCHES '3A...' THEN
        AF = AC.LOCAL.REF
        AV = Y.REPAY.ACCOUNT.POS
        ETEXT = 'Account should be Customer account'
        CALL STORE.END.ERROR
        RETURN
    END

END
