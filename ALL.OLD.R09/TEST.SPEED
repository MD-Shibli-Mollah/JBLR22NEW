    PROGRAM TEST.SPEED
    FILE.NAME="TEST_ACCOUNT_CLONE1"
    COUNTER=10000
    RECORD.DATA=''
    OPEN FILE.NAME TO F.FILE ELSE
        CRT "CANNOT OPEN ":FILE.NAME
    END
    FOR J=1 TO 100
        RECORD.DATA<-1>=J
    NEXT J
    ELAPSED.TIME1=0
    ELAPSED.TIME2=0
    ELAPSED.TIME3=0
    GOSUB WRITE.SPEED
    CRT ""
    GOSUB READ.SPEED
    CRT ""
    GOSUB DELETE.SPEED
    CRT ""
    ELAPSED.TIME = ELAPSED.TIME1+ELAPSED.TIME2+ELAPSED.TIME3
    CRT "TOTAL Elapsed time : ":OCONV(ELAPSED.TIME,'MTS')
    RETURN

WRITE.SPEED:

    START.TIME = OCONV(DATE(),'D4/E'):' ':OCONV(TIME(),'MTS')
    CRT "START TIME ":START.TIME
    FOR I=1 TO COUNTER
        WRITE RECORD.DATA TO F.FILE, "*****":I ON ERROR CRT "CANNOT WRITE TO ":FILE.NAME
*        CRT "WRITING ":"*****":I
    NEXT I
    CRT "WRITE COMPLETE"
    END.TIME = OCONV(DATE(),'D4/E'):' ':OCONV(TIME(),'MTS')
    CRT "END TIME ":END.TIME
    START.TIME1 = ICONV(START.TIME[" ",2,1],"MTS")
    END.TIME1 = ICONV(END.TIME[" ",2,1],"MTS")
    ELAPSED.TIME1 = END.TIME1 - START.TIME1
    CRT "Elapsed time : ":OCONV(ELAPSED.TIME1,'MTS')

    RETURN

READ.SPEED:

    START.TIME = OCONV(DATE(),'D4/E'):' ':OCONV(TIME(),'MTS')
    CRT "START TIME ":START.TIME
    FOR I=1 TO COUNTER
        READ R.RECORD FROM F.FILE, "*****":I ELSE CRT "CANNOT WRITE TO ":FILE.NAME
*       CRT "READING ":"*****":I
    NEXT I
    CRT "READ COMPLETE"
    END.TIME = OCONV(DATE(),'D4/E'):' ':OCONV(TIME(),'MTS')
    CRT "END TIME ":END.TIME
    START.TIME1 = ICONV(START.TIME[" ",2,1],"MTS")
    END.TIME1 = ICONV(END.TIME[" ",2,1],"MTS")
    ELAPSED.TIME2 = END.TIME1 - START.TIME1
    CRT "Elapsed time : ":OCONV(ELAPSED.TIME2,'MTS')
    RETURN

DELETE.SPEED:
    START.TIME = OCONV(DATE(),'D4/E'):' ':OCONV(TIME(),'MTS')
    CRT "START TIME ":START.TIME
    FOR I=1 TO COUNTER
        DELETE F.FILE,"*****":I
*      CRT "DELETING ":"*****":I
    NEXT I
    CRT "DELETE COMPLETE"
    END.TIME = OCONV(DATE(),'D4/E'):' ':OCONV(TIME(),'MTS')
    CRT "END TIME ":END.TIME
    START.TIME1 = ICONV(START.TIME[" ",2,1],"MTS")
    END.TIME1 = ICONV(END.TIME[" ",2,1],"MTS")
    ELAPSED.TIME3 = END.TIME1 - START.TIME1
    CRT "Elapsed time : ":OCONV(ELAPSED.TIME3,'MTS')
    RETURN
